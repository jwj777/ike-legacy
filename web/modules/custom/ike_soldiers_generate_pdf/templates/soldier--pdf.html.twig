<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ike's Soldiers - {{variables.soldier_first_name}} {{variables.soldier_last_name}}</title>
  {# {{ attach_library('ike_soldiers_generate_pdf/styles') }} #}
  {# <link rel='preconnect' href='https://fonts.googleapis.com'>
  <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin>
  <link href='https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap' rel='stylesheet'> #}

  <style>
/* latin-ext */
@font-face {
font-family: sans-serif;

  font-style: normal;
  font-weight: 400;
  font-display: swap;
  /* src: url('https://fonts.gstatic.com/s/librebaskerville/v14/kmKnZrc3Hgbbcjq75U4uslyuy4kn0qNXaxMaC82U-ro.woff2') format('woff2'); */
  unicode-range: U+0100-02AF, U+0304, U+0308, U+0329, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
}
/* latin */
@font-face {
font-family: sans-serif;
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  /* src: url('https://fonts.gstatic.com/s/librebaskerville/v14/kmKnZrc3Hgbbcjq75U4uslyuy4kn0qNZaxMaC82U.woff2') format('woff2'); */
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

    * {
      font-family: sans-serif;

    }

    .image {
      /*background-color: #C11F2A;*/
      border: solid 3px #C11F2A;
      /*margin-top: 1rem;*/
    }

    .sub-left {
      background-color: #C11F2A;
      color: white;
      text-align: center;
      padding: 0.75rem 0;
    }

    .right-block {
      padding: 2rem 4rem;
    }

    .right-block div {
      margin-top: 0.75rem;
    }

    .right-block .section-header {
      text-align: center;
    }

    .right-block .section-header h3 {
      text-align: center;
      margin-bottom: 0;
      padding-bottom: 1px;
      border-bottom: solid 2px #C11F2A;
    }

    .ikes-soldiers-detail--bio-wrap h3 {
      text-align: center;
      width: 319px;
      margin: 1rem auto;
      padding-bottom: 1px;
      border-bottom: solid 2px #C11F2A;
    }

  </style>

</head>

<body>
<table class="tg">
  <thead>
  <tr>
    <th class="tg-0pky" style="vertical-align: top"><div class="left-block">
        <div class="image">
          <img src="{{ variables.soldier_image }}">
        </div>
        <div class="sub-left">
          <div style="font-size: 25px">{{variables.soldier_first_name}}</div>
          <div style="font-size: 25px">{{variables.soldier_last_name}}</div>
          <div style="font-size: 18px; padding-top: 0.5rem; font-style: italic">{{ variables.branch_of_service }}</div>
        </div>
      </div></th>
    <th class="tg-0pky" style="vertical-align: top"><div class="right-block">
        <div class="ikes-soldiers-detail--content__top">
          <h2 style="margin: 0">{{variables.soldier_first_name}} {{variables.soldier_last_name}}</h2>
          {% if variables.date_of_birth %}<div class="ikes-soldiers-detail--date-of-birth">{{ variables.date_of_birth|date("M j, Y") }} - {{ variables.date_of_death is empty ? "" : variables.date_of_death|date("M j, Y") }}</div>{% endif %}
          {% if variables.birthplace %}<div class="ikes-soldiers-detail--birthplace"><strong>BIRTHPLACE: </strong>{{ variables.birthplace }}</div>{% endif %}
        </div>
        <div class="ikes-soldiers-detail--content__section">
          <div class="ikes-soldiers-detail--content__section-header section-header"><h3>SOLDIER DETAILS</h3></div>
          {% if variables.highest_rank %}<div class="ikes-soldiers-detail--rank"><strong>HIGHEST RANK: </strong>{{ variables.highest_rank }}</div> {% endif %}
          <div class="ikes-soldiers-detail--branch inline"><strong>DIVISION: </strong>{{ variables.branch_of_service }}{% if variables.unit %}, {{ variables.unit }} {% endif %}</div>
          {% if variables.theater_of_operation %}<div class="ikes-soldiers-detail--theater"><strong>THEATER OF OPERATION: </strong>{{ variables.theater_of_operation }}</div>{% endif %}
          {% if variables.enlisted_date %}
            <div class="ikes-soldiers-detail--date inline"><strong>SERVED: </strong>{% if '1' in variables.enlisted_approx %}{{ variables.enlisted_date|date("Y") }}{% else %}{{ variables.enlisted_date|date("M j, Y") }}{% endif %} - {% if '1' in variables.discharge_approx %}{{ variables.discharge_date|date("Y") }}{% else %}{{ variables.discharge_date is empty ? "" : variables.discharge_date|date("M j, Y") }}{% endif %}</div>
          {% endif %}
          {% if variables.battle %}<div class="ikes-soldiers-detail--battle"><strong>BATTLE: </strong>{{ variables.battle }}</div>{% endif %}
          {% if variables.military_honors %}<div class="ikes-soldiers-detail--honors"><strong>MILITARY HONORS: </strong>{{ variables.military_honors }}</div>{% endif %}
          {% if variables.honored_by %}<div class="ikes-soldiers-detail--honored-by"><strong>HONORED BY: </strong>{{ variables.honored_by }}</div>{% endif %}
          {% if '1' in variables.pow %}<div class="ikes-soldiers-detail--pow"><strong>PRISONER OF WAR</strong></div>{% endif %}
          {% if '1' in variables.kia %}<div class="ikes-soldiers-detail--kia"><strong>KILLED IN ACTION</strong></div>{% endif %}
          <div class="ikes-soldiers-detail--pow"></div>
          <div class="ikes-soldiers-detail--kia"></div>
        </div>
      </div></th>
  </tr>
  </thead>
</table>
{% if variables.biographical_information %}<div class="ikes-soldiers-detail--content__section ikes-soldiers-detail--bio-wrap">
  <div class="ikes-soldiers-detail--content__section-header section-header"><h3>BIOGRAPHY</h3></div>
  <div class="ikes-soldiers-detail--biographical-info">
    {{ variables.biographical_information|striptags|raw }}
  </div>
  </div>
{% endif %}
</body>
</html>
