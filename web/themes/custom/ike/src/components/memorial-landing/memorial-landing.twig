{{ attach_library('ike/memorial-landing') }}

<section class="memorial-landing">

  <div class="map-embed-container">
    <div class="map-embed">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12422.966557507776!2d-77.02277559529767!3d38.88415252107557!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b7b771599a80d3%3A0xd11adcd5a887f4a7!2sDwight%20D.%20Eisenhower%20Memorial!5e0!3m2!1sen!2sus!4v1617310405285!5m2!1sen!2sus"
        width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
    <div class="map-embed-sub">
      {{ memorial_link }}
    </div>
  </div>

  <div class="title-container">
    <h2>{{ title }}</h2>
  </div>

  <div class="star-row">
    <span class="star"></span>
    <span class="star"></span>
    <span class="star"></span>
    <span class="star"></span>
    <span class="star"></span>
  </div>

  <div class="address-container">
    <div class="top-address">
      <p>{{ memorial_address_first }}</p>
    </div>
    <div class="bottom-address">
      <p>{{ memorial_address_second }}</p>
    </div>
  </div>

  <div class="hours-container">
    <div class="hours-title">
      <p>Hours:</p>
    </div>
    <div class="hours-display">
      {{ memorial_hours }}
    </div>
  </div>

  <div class="donors-link">
    <span class="star"></span>
    <h2>{{ donors_link }}</h2>
    <span class="star"></span>
  </div>

  <div class="audio-link">
    <span class="star"></span>
    <h2>{{ audio_tour_link }}</h2>
    <span class="star"></span>
  </div>

</section>

