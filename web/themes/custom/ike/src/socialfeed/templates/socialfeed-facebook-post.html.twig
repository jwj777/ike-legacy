{% if post.picture %}
  <div class="fb-pic">
    <img src="{{ post.picture }}"/>
  </div>
{% endif %}

{% if post.video %}
  <div class="fb-video">
    <a href="{{ post.video }}">See Video</a>
  </div>
{% endif %}

<div class="fb-feed__content">
  {% if post.message %}
    <div class="fb-message">
      <span class="fb-message-content">{{ post.message }}</span><span class="fb-message-ellipsis">...</span>
    </div>
  {% endif %}

  {% if post.link %}
    <div class="fb-link">
      {{ post.link }}
    </div>
  {% endif %}

  <div class="fb-feed__content--bottom">
    {% if post.permalink_url %}
      <div class="fb-permalink">
        {{ post.permalink_url}}
      </div>
    {% endif %}

    {% if should_display_time %}
      <div class="fb-time">
        {{ post.created_time|date("F j, Y") }}
      </div>
    {% endif %}
  </div>
</div>
