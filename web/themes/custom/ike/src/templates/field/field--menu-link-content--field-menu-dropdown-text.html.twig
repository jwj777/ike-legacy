{%
  set classes = [
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

<div{{ attributes.addClass(classes, 'wrapper')}}>
  {% for item in items %}
    <div class="field__item">{{ item.content }}</div>
  {% endfor %}
</div>